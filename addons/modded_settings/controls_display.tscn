resource_name = "ControlsDisplay"
script/source = "extends PanelContainer

@onready var input_remap_scene : PackedScene = preload(\"res://addons/modded_settings/input_remap.tscn\")
enum ACTIONS {left, right, up, down, jump, interact, attack, dash}

func _ready() -> void:
	instantiate_input_map()

func instantiate_input_map():
	for action in ACTIONS.keys():
		var input_remap = input_remap_scene.instantiate()
		%InputMaps.add_child(input_remap)
		
		var input_events_for_action : Array = InputMap.action_get_events(action)
		var input_event_key : InputEventKey 
		for input_event in input_events_for_action:
			if input_event is InputEventKey:
				input_event_key = input_event
		
		print(name, \": action: \", action, \" input_event_key: \", input_event_key)
		if input_event_key.physical_keycode: #Physical is when you set it manually in Project Settings
			input_remap.update_input_remap(action, input_event_key.as_text_physical_keycode())
		else: #if not a physical keycode then you used a script to assign a value
			input_remap.update_input_remap(action, input_event_key.as_text_keycode())
"

